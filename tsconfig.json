{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@app/*": [
        "src/*"
      ]
    },
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": false,
    "resolveJsonModule": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true
  },
  "exclude": ["node_modules", "dist"]
}
